<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TraficLight.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:TraficLight.ViewModels"
    x:DataType="vm:MainPageVM">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,*" RowSpacing="5">
        <Frame>
            <BoxView BackgroundColor="{Binding RedColor}" />
        </Frame>
        <Frame Grid.Row="1">
            <BoxView BackgroundColor="{Binding YellowColor}" />
        </Frame>
        <Frame Grid.Row="2">
            <BoxView BackgroundColor="{Binding GreenColor}" />
        </Frame>
        <Button
            Grid.Row="3"
            Command="{Binding ChangeLightCommand}"
            Text="Change" 
            Style="{x:StaticResource MyButtonStyle}"/>
        <Button
            Grid.Row="4"
            Command="{Binding AutoChangeCommand}"
            Text="{Binding SwitchAutoChangeLightText}" />
        <Image
            Grid.Row="5"
            Source="{Binding LightImage}"
            HorizontalOptions="Center"
            VerticalOptions="Center" />
    </Grid>
</ContentPage>
